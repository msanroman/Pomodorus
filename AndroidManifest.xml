<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.gps.pomodorus"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="org.gps.pomodorus.GPSActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.gps.pomodorus.TasksOverviewActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.CategoriesOverviewActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.CrearTascaActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.CrearCategoriaActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.LogInTwitterActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="twitter" />
            </intent-filter> 
        </activity>    
        <activity android:name="org.gps.pomodorus.UpdateTask" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.UpdateCategory" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.TaskDetailActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.PomodoroActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name="org.gps.pomodorus.TweetPomodoro" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar" />
	</application>
</manifest>